{
  "name": "riotjs-webpack-sass-boilerplate",
  "version": "1.0.0",
  "description": "riotjs-webpack-sass-boilerplate",
  "main": "index.js",
  "devDependencies": {
    "@types/config": "0.0.32",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.17",
    "@types/power-assert": "^1.4.29",
    "@types/riot": "^3.6.0",
    "browser-sync": "^2.18.13",
    "config": "^1.26.1",
    "connect-browser-sync": "^2.1.0",
    "ect": "^0.5.9",
    "espower-typescript": "^8.0.2",
    "express": "^4.15.3",
    "istanbul": "^0.4.5",
    "js-yaml": "^3.9.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "power-assert": "^1.4.4",
    "remap-istanbul": "^0.9.5",
    "riot": "^3.6.1",
    "riotjs-loader": "^4.0.0",
    "testdouble": "^3.2.2",
    "ts-loader": "^2.3.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "clean": "rm -rf build public/script public/style",
    "build:css": "node-sass ./src/client/style/index.scss ./public/style/index.css --output-style compressed",
    "build:ts": "tsc",
    "build": "npm-run-all --parallel -c build:*",
    "lint": "tslint -c ./tslint.json src/**/*.ts test/**/*.ts",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- --recursive ./build/test",
    "pretest": "npm-run-all clean build",
    "test": "./node_modules/mocha/bin/mocha --recursive ./build/test && npm run lint && npm run coverage",
    "posttest": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/ts-report -t html",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "watch:client": "webpack -w",
    "watch:ts": "tsc -w",
    "watch:server": "nodemon -w build/src build/src/index.js",
    "watch": "npm-run-all --parallel watch:*",
    "start:server": "node build/src/index.js",
    "dev": "npm-run-all clean build watch",
    "prod": "NODE_ENV=production npm-run-all clean build start:server",
    "start": "npm run prod"
  },
  "keywords": [],
  "author": "xtity",
  "license": "Apache-2.0"
}
