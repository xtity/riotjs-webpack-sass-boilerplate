{
  "name": "riotjs-webpack-sass-boilerplate",
  "version": "1.0.0",
  "description": "riotjs-webpack-sass-boilerplate",
  "main": "index.js",
  "devDependencies": {
    "@types/riot": "^3.6.0",
    "concurrently": "^3.5.0",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "riot": "^3.6.1",
    "riotjs-loader": "^4.0.0",
    "ts-loader": "^2.3.1",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "webpack": "webpack -w",
    "lite": "lite-server",
    "build-css": "node-sass ./src/scss/app.scss ./app/styles/app.css --output-style compressed",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "start": "concurrently \"npm run lite\" \"npm run webpack\" \"npm run watch-css\""
